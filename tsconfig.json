{
    "compilerOptions": {
        "declaration": true,
        "target": "es2022",
        "module": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "rootDir": "src",
        "declarationMap": true
    },
    "include": [
        "src/**/*",
        "./eslint.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}